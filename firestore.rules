rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Games collection - accessed only via backend API (Admin SDK bypasses rules)
    // Direct client access is denied for security
    match /games/{gameCode} {
      // Deny all direct client access - all legitimate access goes through
      // the FastAPI backend which uses Admin SDK (bypasses these rules)
      allow read, write: if false;
    }

    // Deny access to any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
